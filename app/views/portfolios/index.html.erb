<h1>Portfolio Items</h1>
<%= link_to 'Create new item', new_portfolio_path %>

<% @portfolio_items.each do |items| %>
<p><%= link_to 'Edit Profile Item', edit_portfolio_path(items) %></p>
<p><%= link_to items.title, portfolio_path(items) %></p>
<p><%= items.subtitle %></p>
<p><%= items.body %></p>
<%= link_to image_tag(items.thumb_image), portfolio_path(items) unless items.main_image.nil?%>
<% end %>