<h1>Portfolio Items</h1>
<%= link_to 'Create new item', new_portfolio_path %>

<% @portfolio_items.each do |items| %>
<p><%= link_to 'Edit Profile Item', edit_portfolio_path(items) %></p>
<p><%= items.title %></p>
<p><%= items.subtitle %></p>
<p><%= items.body %></p>
<%= image_tag items.thumb_image unless items.thumb_image.nil? %>
><%= image_tag items.main_image unless items.main_image.nil?%>
<% end %>