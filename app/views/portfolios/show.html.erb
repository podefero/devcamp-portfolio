<h1><%= @portfolio_item.title %></h1>
<h2><%= @portfolio_item.subtitle %></h2>
<p><%= @portfolio_item.body %></p>
<%= image_tag @portfolio_item.main_image %>
<h2>Technologies Used: </h2>
<% @portfolio_item.technologies.each do |t| %>
  <p><%= t.name %></p>
<% end %>
  
<%= link_to 'Edit', edit_portfolio_path %>
<p><%= link_to 'Back', portfolios_path %></p>
<p><%= link_to 'Delete', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
